<div class="card">
    <div class="card-img">
        <img src="{{book.image_link}}" class="card-img-top" alt="{{book.title}}">
    </div>
    <div class="card-body">
        <h5 class="card-title">{{book.title}}</h5>
        <p class="card-text">{{book.description}}</p>
        {{#if showReserve}}
            <a href="/reservation?id={{book.id}}&q={{book.search_id}}" class="btn btn-primary">Reserve</a>
        {{/if}}
    </div>
</div>